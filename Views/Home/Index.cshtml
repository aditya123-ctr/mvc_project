@model IEnumerable<TechNovaSolutions.Models.DepartmentEmployee>

@{
    ViewData["Title"] = "Employee Dashboard";
}

<div class="container mt-5 mb-5">
    <div class="text-center">
        <h1 class="display-5 fw-bold text-gradient">👨‍💼 Employee Dashboard</h1>
        <p class="lead text-muted">Explore, manage, and track your team with style</p>
    </div>

    <div class="d-flex justify-content-end mb-4">
        <a asp-action="Create" class="btn btn-lg btn-outline-success shadow-sm fw-bold">
            ➕ Add New Employee
        </a>
    </div>

    <div class="table-responsive shadow rounded-4 border border-2 border-primary">
        <table class="table table-striped table-hover align-middle text-center mb-0">
            <thead class="table-primary text-dark fs-5">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.EmpAge)</th>
                    <th>@Html.DisplayNameFor(model => model.EmpOccupation)</th>
                    <th>@Html.DisplayNameFor(model => model.EmpSalary)</th>
                    <th>@Html.DisplayNameFor(model => model.EmpEmail)</th>
                    @* <th>@Html.DisplayNameFor(model => model.PhoNo)</th> *@
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.EmpAge)</td>
                        <td>@Html.DisplayFor(modelItem => item.EmpOccupation)</td>
                        <td>₹@Html.DisplayFor(modelItem => item.EmpSalary)</td>
                        <td>@Html.DisplayFor(modelItem => item.EmpEmail)</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.EId" class="btn btn-sm btn-outline-warning">✏️</a>
                                <a asp-action="Details" asp-route-id="@item.EId" class="btn btn-sm btn-outline-info">🔍</a>
                                <a asp-action="Delete" asp-route-id="@item.EId" class="btn btn-sm btn-outline-danger">🗑️</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .text-gradient {
        background: -webkit-linear-gradient(#007bff, #00c6ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>
